/**
 * print_sign - function that prints the sign of a number
 * @n: The number to check
 *
 * Return: 1 if number is positive
 *         0 if number is zero
 *        -1 if number is negative
 */

int print_sign(int n)
{
	int var;

	if (n == 0)
	{
		var = 0;
		_putchar(48);
	} else if (n > 0)
	{
		_putchar(43);
		var = 1;
	} else
	{
		_putchar(45);
		var = -1;
	}
	return (var);
}
